{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}